<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/bg1"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".Register_form"

    android:theme="@style/Theme.AppCompat.NoActionBar"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#99141414"
                android:backgroundTint="#99141414"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Enter Email"
                android:textColorHint="@color/black"
                app:boxCollapsedPaddingTop="10dp"
                app:boxStrokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailforregister"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#99141414"
                android:background="#99141414"
                android:hint="Enter Name"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="@color/black"
                android:layout_marginTop="20dp"
                app:boxCollapsedPaddingTop="10dp"
                app:boxStrokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/usernameforregister"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:background="#99141414"
                android:backgroundTint="#99141414"
                android:hint="Password"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordforregister"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:background="#99141414"
                android:backgroundTint="#99141414"
                android:hint="Confirm Password"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmpasswordforregister"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Gender"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Female"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:buttonTint="@color/black" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Male"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:buttonTint="@color/black" />
            </RadioGroup>

            <Button
                android:id="@+id/register1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounding"
                android:text="Register"
                android:textSize="10dp"
                app:backgroundTint="#6F0E80"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="If already have an account click"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/login1"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:text="HERE"
                app:backgroundTint="#9C27B0" />

            <ProgressBar
                android:id="@+id/progressbrsignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>